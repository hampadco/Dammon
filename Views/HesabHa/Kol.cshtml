@model Account

<style>
    td,
    tr {

        border: 0.5px solid rgb(0, 0, 0);
        white-space: nowrap;
        text-align: center;
    }

     tr:hover {
        background-color: rgb(251, 251, 0);
        color: rgb(1, 1, 1);

    }

    .selected {
        background-color: rgb(251, 251, 0);
        color: rgb(0, 0, 0);
    }
    .row>* {

        padding-right: 0 !important;
        padding-left: 2px !important;

    }
</style>


<div class="card p-4" style="zoom: 90%;">


    <div class="row p-4">

<form action="/hesabha/kol" method="post">
        <div class=" ">
            <div class="row alert alert-primary p-4 ">
                <p class="text-center alert alert-success fs-large text-black">معرفی حساب های کل</p>

                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-12 "
                    style="padding-left: 20px  !important;padding-right: 20px  !important;">





                    <div class="row">

                        <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-12">
                            <label class="p-1 text-center ">   کد گروه - شرح گروه: </label>
                        </div>



                        <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 col-12">

                            <select asp-for="CodeGroup" required class="form-select " asp-items="@ViewBag.GroupId">

                               

                            </select>
                        </div>




                    </div>

                </div>

                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-12  "
                    style="padding-left: 20px  !important;padding-right: 20px  !important;">




                    @* 4*@


                    <div class="row">

                        <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-12">
                            <label class="p-1 text-center "> شرح کل: </label>
                        </div>



                        <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 col-12">
                            <input asp-for="TitleTotal" required  class="form-control">

                        </div>




                    </div>














                </div>

                 <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-12  "
                    style="padding-left: 20px  !important;padding-right: 20px  !important;">




                    @* 4*@


                    <div class="row">

                       



                        <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 col-12">
                              <button type="submit" class="btn btn-warning " style="width: 30%;margin-top: 35px;">ثبت</button>

                        </div>




                    </div>














                </div>


            </div>




               



            </div>










        
</form>









        <div class="col-12 card mt-5   " style="overflow-x: scroll;">
            <div class="row justify-content-center text-center">
                <div class="col-4 mt-4  ">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="برای جستجو متن رو وارد کنید ..."
                            aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-primary" type="button" id="button-addon2">جستوجو</button>
                    </div>
                </div>

            </div>


            <div class="card-body ">

                <table class="table table-bordered " id="myTable">

                    <tr style="background-color: whitesmoke;">
                        <th>ردیف</th>
                        <th>کد گروه</th>
                        <th>شرح گروه</th>
                        <th>کد کل</th>
                        <th>شرح کل </th>
                        <th>عملیات</th>

                    </tr>

                   
                       @{int i = 1;}
                        @foreach (var item in ViewBag.Kol)
                        { 
                            <tr>
                            <td>@i</td>
                            
                            <td>@item.CodeGroup</td>
                             <td>@item.TitleGroup</td>
                              <td>@item.CodeTotal</td>
                               <td>@item.TitleTotal</td>
                           <td>
                                <a href="/hesabha/deletekol/@item.Id" onclick="return confirm('آیا از حذف رکورد مورد نظر مطمئن هستید ؟')" class="btn btn-danger ">حذف </a>
                                <a href=""  class="btn btn-primary ">ویرایش </a>

                            </td>
                           

                               </tr> 
                            i++;
                        }
                       
                        
                      



                 


                </table>

            </div>
        </div>



    </div>

</div>

<script>
    // Get all table rows
    const rows = document.querySelectorAll("#myTable tr");

    // Add click event listener to each row
    rows.forEach(row => {
        row.addEventListener("click", function () {
            // Remove the 'selected' class from all rows
            rows.forEach(row => {
                row.classList.remove("selected");
            });

            // Add the 'selected' class to the clicked row
            this.classList.add("selected");
        });
    });
</script>